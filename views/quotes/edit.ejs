<% if (locals.errors) { %>
<% for(var i = 0; i < errors.length; i++) { %>
<article class="message is-danger">
  <div class="message-body">
    <%= errors[i].text %>
  </div>
</article>
<% } %>
<% } %>

<% if (locals.quote) { %>
  <header>
    <h1 class="is-size-3 has-text-weight-bold">Edit your favorite quote.</h1>
  </header>
  <section class="section">
    <form action="/quotes/<%= quote.id%>?_method=PUT" method="POST">
      <input type="hidden" name="_method" value="PUT">
      <div class="field">
        <div class="control">
          <label class="label" for="author">Author</label>
          <input class="input" type="text" placeholder="Text input" name="author" value="<%= quote.author %>">
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label class="label" for="sentence">Sentence Text</label>
          <textarea class="textarea" placeholder="Textarea" name="sentence"><%= quote.sentence %></textarea>
        </div>
      </div>

      <div class="field is-grouped">
        <div class="control">
          <button type="submit" class="button is-link">Submit</button>
        </div>
        <div class="control">
          <button class="button is-link is-light">Cancel</button>
        </div>
      </div>
    </form>
  
  </section>
<% } %>